<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateVote">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:src="@drawable/addsign"
        android:id="@+id/pos"
        app:fabCustomSize="70dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Candidate Details"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="20dp"
                />

            <View
                android:layout_width="330dp"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_gravity="center"
                />

            <View
                android:layout_width="330dp"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:visibility="invisible"
                android:id="@+id/i_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_gravity="center"
                android:gravity="center"
                />
            <TextView
                android:visibility="invisible"
                android:id="@+id/name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="txtname"
                android:layout_gravity="center"
                android:gravity="center"
                />
            <TextView
                android:visibility="invisible"
                android:id="@+id/password1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="txtpassword"
                android:layout_gravity="center"
                android:gravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Candidate 1"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"

                />

            <EditText
                android:id="@+id/c1name"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext"
                android:hint="Candidate Name"
                android:padding="11dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext"
                android:hint="Candidate Info"
                android:padding="11dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                />

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Candidate 2"
                    android:textSize="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/c2name"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext"
                    android:hint="Candidate Name"
                    android:padding="11dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    />

                <EditText
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext"
                    android:hint="Candidate Info"
                    android:padding="11dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/black"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Candidate 3"
                    android:textSize="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"

                    />

                <EditText
                    android:id="@+id/c3name"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext"
                    android:hint="Candidate Name"
                    android:padding="11dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    />

                <EditText
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext"
                    android:hint="Candidate Info"
                    android:padding="11dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/black"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Candidate 4"
                    android:textSize="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/c4name"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext"
                    android:hint="Candidate Name"
                    android:padding="11dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    />

                <EditText
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext"
                    android:hint="Candidate Info"
                    android:padding="11dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/black"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Candidate 5"
                    android:textSize="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/c5name"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext"
                    android:hint="Candidate Name"
                    android:padding="11dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    />

                <EditText
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext"
                    android:hint="Candidate Info"
                    android:padding="11dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/black"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Candidate 6"
                    android:textSize="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/c6name"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext"
                    android:hint="Candidate Name"
                    android:padding="11dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    />

                <EditText
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext"
                    android:hint="Candidate Info"
                    android:padding="11dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/black"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/btn_create"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Create Vote"
                android:textSize="20dp"
                android:background="@drawable/edittext"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </LinearLayout>

    </ScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>